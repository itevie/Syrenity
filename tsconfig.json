{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./build",
    "esModuleInterop": true,
    "noImplicitReturns": false,
    "target": "es2022",
    "allowSyntheticDefaultImports": true,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "typeRoots": ["./src/types"],
    "resolveJsonModule": true,
    "strictNullChecks": true
  },
  "ts-node": {
    "files": true
  },
  "exclude": ["old/v0"],
  "files": ["src/**/*.d.ts"],
  "include": [
    "src/**/*.ts",
    "test/**/*.ts",
    "src/public/ts/general.js",
    "src/public/ts/axios.js",
    "src/public/ts/lib/marked.esm.js"
  ]
}
