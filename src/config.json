{
  "server": {
    "bodyLimit": "2mb",
    "port": 3000,
    "routes": {
      "defaultVersion": 2
    }
  },
  "files": {

  },
  "proxy": {
    "saveLocally": true
  },
  "ws": {
    "heartbeat_interval": 30000
  },
  "database": {
    "constring": "postgres://postgres:postgres@127.0.0.1:5432/syrenity"
  },
  "defaults": {
    "roles": {
      "name": "new-role",
      "color": null,
      "bitfield_allow": 0,
      "bitfield_deny": 0,
      "rank": -1000000
    }
  },
  "validity": {
    "messages": {
      "minLength": 1,
      "maxLength": 4000
    },
    "files": {
      "nameRegex": "[a-zA-Z0-9]{1,50}(\\.[a-z0-9]{1,7}){1,3}"
    },
    "roles": {
      "name": {
        "minLength": 1,
        "maxLength": 30
      }
    },
    "channels": {
      "name": {
        "minLength": 1,
        "maxLength": 20
      },
      "topic": {
        "minLength": 1,
        "maxLength": 2000
      }
    }
  }
}
