{
    "server": {
        "bodyLimit": "2mb",
        "port": 3000
    },
    "ws": {
        "heartbeat_interval": 30000
    },
    "database": {
        "constring": "postgres://postgres:postgres@127.0.0.1:5432/discord"
    },
    "validity": {
        "messages": {
            "minLength": 1,
            "maxLength": 4000
        },
        "files": {
            "nameRegex": "[a-zA-Z0-9]{1,50}(\\.[a-z0-9]{1,7}){1,3}"
        },
        "channels": {
            "name": {
                "minLength": 1,
                "maxLength": 20
            },
            "topic": {
                "minLength": 1,
                "maxLength": 2000
            }
        }
    }
}